module Entity

$include Entity/UIConsoleViewCanvas

class UIConsoleView : UIView
  METHODS
    method init
      prior.init( XY(Console.width, Console.height) )

    method init( size:XY )
      prior.init( size )

    method draw( clip_bounds:Box )
      prior.draw( clip_bounds )
      UIConsoleViewCanvas.display(0,0)

    method update
      UIConsoleViewCanvas.resize( placement.size.x, placement.size.y )
      UIConsoleViewCanvas.fill( '.' )

endClass
