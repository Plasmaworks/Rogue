#==============================================================================
# Writer.rogue
#==============================================================================

class Writer<<$DataType>> [abstract aspect]
  PROPERTIES
    position : Int32

  METHODS
    method close
      noAction

    method flush
      noAction

    method on_use->this
      return this

    method on_end_use( err:Exception )->Exception
      close
      return err

    method position->Int32 [fallback]
      return @position

    method reset
      seek( 0 )

    method seek( pos:Int32 )
      position = pos

    method seek_end()
      noAction

    method skip( n:Int32 )
      seek( position + n )

    method write( value:$DataType ) [abstract]

    method write( list:$DataType[] )
      forEach (value in list) write( value )
endClass

