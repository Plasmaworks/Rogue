module ECS

class Entity
  PROPERTIES
    id : Int32

  METHODS
    method init_object
      EntityManager.assign_id( this )

    method on_cleanup
      destroy

    method destroy
      if (id)
        EntityManager.destroy( this )
        id = 0
      endIf

    method signature->ComponentSignature
      return EntityManager.signatures[id]

    method to->String
      return "(Entity $)"(id)
endClass

