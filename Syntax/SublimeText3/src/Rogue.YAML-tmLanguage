  method_params:
    name: meta.method.params.rogue
    begin: (\()
    end: (\))
    patterns:
    - name: variable.parameter.rogue
      match: (?<!:|=|\.|\$|-)\b\w+(?:(?=\=)|(?=:)|(?=,)|(?=\)))
    - include: '#strings'
    - include: '#constants'
    - include: '#operators'
    - include: '#types'

  method_name:
    name: entity.name.function.rogue
    match: ((\w+)((?=\()|(?=\-)|(?=\n)))

